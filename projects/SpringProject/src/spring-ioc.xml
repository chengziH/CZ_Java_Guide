<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" 
    default-init-method="init" default-destroy-method="destory">
    
    <bean id="oneService" class="com.base.service.impl.OneServiceImpl">
    	<!-- bean oneService的属性，name表示属性名，ref表示需指定的类型，当前指定到twoService bean -->
    	<!-- <property name="twoService" ref="twoService"></property> -->
    	<!-- 构造注入 -->
    	<constructor-arg name="twoService" ref="twoService"></constructor-arg>
    </bean> 
    <bean id="twoService" class="com.base.service.impl.TwoServiceImpl"></bean>   
</beans>